extends layout

block content
  - let create = `dispatch(\"batman/create\")`
  button.btn(class="btn-primary m1-1", onclick=create) Create
  h1= title
  - let batman=results;
  div(class="container-fluid mt-3")
   div(class="row m-1")
    each element in batman
     - let destination=`buy(\"/batman/update?id=${element._id}\")`
     - let detail=`buy(\"/batman/detail?id=${element._id}\")`
     - let del=`buy(\"/batman/delete?id=${element._id}\")`
     div(class="col-sm-6 bg-secondary m-1 p-3") batman #{element.actor} - #{element.age} - #{element.color}
      button.btn( class="btn-info ml-2", onclick=destination ) Update
      button.btn( class="btn-dark ml-2", onclick=detail ) Get Detail
      button.btn( class="btn-warning ml-2", onclick=del ) Delete
  
   script.
    function buy(path){
        window.location.href=path

        //alert(`You purchased Item ${a+1}`)
      }